{% extends 'base.html.twig' %}

{% block title %}Nos annonces{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Voici les annonces de nos hôtes</h1>
    <div class="row">
        {% for ad in ads %}
            <div class="col-md-4">
            <div class="card bg-light mb-3">
                <div class="card-header text-center">
                    {{ ad.rooms }} chambres, <strong>{{ ad.price }}&euro; / nuit</strong><br>
                    <medium>Pas encore noté</medium>

                    <img class="mt-3" src="{{ ad.coverImage }}" alt="image de l'appartement" style="height: 200px; width: 100%; display:block;">
                    <div class="card-body">
                        <h4>{{ ad.title }}</h4>
                        <p class="card-text">{{ ad.introduction }}</p>
                        <a href="" class="btn btn-outline-primary">En savoir plus</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
